#!/bin/bash
#  _______   _______
# |  _____| |  ___  |
# | |       | |   | |    Rolando Ramos Torres (@rolodoom)
# | |       | |___| |    http://rolandoramostorres.com
# |_|       |_______|
#  _         _______     r_git_update
# | |       |  ___  |
# | |       | |   | |    Commit with custom message
# | |_____  | |___| |    "Update" message if no argument provided
# |_______| |_______|
# 
#

#git add -A && git commit -m "Update" && git push


if [ $# -eq 0 ]
    then
        git add -A
        git commit -m "Update"
        git push
    else
        FILEDB=$1
        git add -A
        git commit -m "$FILEDB"
        git push
fi
